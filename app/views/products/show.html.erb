<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @product.image_url.to_s %>
</p>

<p>
  <%= form_for @order_item, url: add_to_cart_path({product: @product.id}) do |f| %>
   <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
  
  <div class="actions">
    <%= f.submit "Add to cart" %>
  </div>
  <% end %>
</p>

<p> 
	<h2> average rating:</2>
	<% if @reviews.nil? %>
		<%= "not yet reviewed" %>
	<% else %>
		<% @reviews.average(:rating).to_i.times do %>
			<%= image_tag "star.png" %>
		<% end %>
	<% end %>
</p>

<%= render "/reviews/show" %>
<br>

<!-- use css to make form hidden, then when user clicks button to review show form -->
<%= render "/reviews/form" %>

<br>

<%= link_to 'Edit', edit_product_path(@product) %> |
