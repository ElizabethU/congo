<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>


<p> 
	<% if @product[:reviews].nil? %>
		<%= "not yet reviewed" %>
	<% else @product[:reviews].average(:rating).to_i.times do %>
			<%= image_tag "star.png" %>
		<% end %>
	<% end %>
</p>

<%= render "/reviews/show" %>
<br>

<%= render "/reviews/form" %>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
